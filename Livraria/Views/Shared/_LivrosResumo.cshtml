@model Livro


<div class="col-sm-4 col-md-4 col-lg-4 ">
    <div class="d-flex justify-content-center">
        <h4>
            <a asp-controller="Livro" asp-action="Details"
               asp-route-livroId="@Model.LivroId">@Model.Nome</a>
            <br />
        </h4>
    </div>
    <div class="box">
       <div class="box1">
    <p class="tamanho"><img src="@Model.ImagemUrl"  ></p>
    <p>@Model.Autor</p>
    <h6>Preço: @Model.Preco.ToString("c")</h6>
    </div>
    </div>

    <div>
        <p class="button box1">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemCarrinhoCompra" asp-route-LivroId="@Model.LivroId">Adicionar ao carrinho </a>
        </p>
    </div>
</div>